@model YongqingProgramTest.ViewModel.Out.CustomerRVModel;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form id="SaveEditForm" action="~/Customer/SaveEdit" method="post">
    <div class="container" style="text-align:center;">
        <div class="row">
            <div class="col-sm" style="border:1px #46494C solid;">
                客戶編號
            </div>
            <div class="col-sm" style="border:1px #46494C solid;">
                @{ 
                    string _readonly = Model.ActionType == "U" ? "readonly" : "";
                }
                <input type="text" maxlength="5" class="form-control" placeholder="客戶編號" name="CustomerId" value="@Model.CustomerId" @_readonly>
            </div>
        </div>
        <div class="row">
            <div class="col-sm" style="border:1px #46494C solid;">
                公司名字
            </div>
            <div class="col-sm" style="border:1px #46494C solid;">
                <input type="text" maxlength="40" class="form-control" placeholder="公司名字" name="CompanyName" value="@Model.CompanyName">
            </div>
        </div>
        <div class="row">
            <div class="col-sm" style="border:1px #46494C solid;">
                聯絡人姓名
            </div>
            <div class="col-sm" style="border:1px #46494C solid;">
                <input type="text" maxlength="30" class="form-control" placeholder="聯絡人姓名" name="ContactName" value="@Model.ContactName">
            </div>
        </div>
        <div class="row">
            <div class="col-sm" style="border:1px #46494C solid;">
                電話
            </div>
            <div class="col-sm" style="border:1px #46494C solid;">
                <input type="text" maxlength="24" class="form-control" placeholder="電話" name="Phone" value="@Model.Phone">
            </div>
        </div>
    </div>
    @Html.Hidden("ActionType", Model.ActionType)
    <button class="btn btn-outline-secondary" type="button" onclick="btnSave()"><i class="icon-save"></i></button>
</form>
@{
    string Random = new Random().Next().ToString();
}
<script src="~/js/ViewScript/Customer/CustomerEdit.js?@Random"></script>